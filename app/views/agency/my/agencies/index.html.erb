<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Agency.human_attribute_name(:relation) %></th>
      <th><%= Agency.human_attribute_name(:note) %></th>
      <th><%= Agency.human_attribute_name(:commission_ratio) %></th>
      <th><%= Agency.human_attribute_name('client.name') %></th>
      <th>
        <%= link_to new_my_agency_path, remote: true, class: 'ui mini teal button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @agencies.each do |agency| %>
    <tr>
      <td><%= agency.relation_i18n %></td>
      <td><%= agency.note %></td>
      <td><%= agency.commission_ratio %></td>
      <td>
        <%= link_to agency.client.name %>
      </td>
      <td>
        <%= link_to my_agency_path(agency), aria: { label: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_my_agency_path(agency), aria: { label: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to my_agency_path(agency), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
